                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_AirWalk" Height="40" ToolTip="Makes you Glide trought the air"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- AirWalk -->
