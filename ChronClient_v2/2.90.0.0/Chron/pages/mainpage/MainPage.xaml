                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_CubecraftFly" Height="40" ToolTip="Makes you Glide trought the air"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- CubecraftFly -->
