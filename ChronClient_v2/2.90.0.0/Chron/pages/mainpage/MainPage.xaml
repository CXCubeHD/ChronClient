                                        </Grid>
                                    </Grid>
                                </StackPanel>
                                    <TabControl x:Name="SettingsView" SelectionChanged="SettingsView_SelectionChanged" DockPanel.Dock="Bottom" Background="{x:Null}" BorderBrush="{x:Null}">
