                                                Style="{StaticResource MaterialDesignDiscreteSlider}"
                                                ToolTip="SpeedValue"
                                                Value="80" Width="auto"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- Highjump -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_Step" Height="40" ToolTip="Allows you to jump in the Air when enabled"/>
                                            <Slider Minimum="0" HorizontalAlignment="Stretch" x:Name="ModuleButton_Step_ValueSlider"
                                                Maximum="100" Margin="5,-35,15,2"
                                                Style="{StaticResource MaterialDesignDiscreteSlider}"
                                                ToolTip="SpeedValue"
                                                Value="30" Width="auto"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- Step -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_NoJumpDelay" Height="40" ToolTip="Allows you to jump in the Air when enabled"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- NoJumpDelay -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_Reverse" Height="40" ToolTip="Makes you Glide trought the air"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- Reverse -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_Antivoid" Height="40" ToolTip="Makes prevents you from falling into the void"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- Antivoid -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_NoWeb" Height="40" ToolTip="Allows you to jump in the Air when enabled"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- NoWeb -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_NoWater" Height="40" ToolTip="Allows you to jump in the Air when enabled"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- NoWater -->
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem>
                        <ScrollViewer>
                            <StackPanel  HorizontalAlignment="Stretch" MaxWidth="500">
                                <!-- Template for Module -->
                                <Grid Margin="5"  Visibility="Collapsed">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_Killaura" Height="40" ToolTip="Attacks other players"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- Killaura -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_Reach" Height="40" ToolTip="Attacks other players"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- Reach -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_RapidHit" Height="40" ToolTip="Lets you attack fast"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- RapidHit -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_Hitbox" Height="40" ToolTip="Lets you attack fast"/>
                                            <Slider Minimum="9" HorizontalAlignment="Stretch" x:Name="ModuleButton_Hitbox_ValueSlider"
                                                Maximum="100" Margin="5,-35,15,2"
                                                Style="{StaticResource MaterialDesignDiscreteSlider}"
                                                ToolTip="SpeedValue"
                                                Value="50" Width="auto"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- Hitbox -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_TpAura" Height="40" ToolTip="Lets you attack fast"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- TPAura -->
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem>
                        <ScrollViewer  HorizontalAlignment="Stretch" MaxWidth="500">
                            <StackPanel>
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_FreeView" Height="40" ToolTip="Allows you to jump in the Air when enabled"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- FreeView -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_ClickTp" Height="40" ToolTip="Allows you to jump in the Air when enabled"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- ClickTp -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_BlockReach" Height="40" ToolTip="Allows you to jump in the Air when enabled"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- BlockReach -->
                                <Grid Margin="5" >
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_NoKnockBack" Height="40" ToolTip="Allows you to boost in the direction you are looking at"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- NoKnockBack -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_NoFall" Height="40" ToolTip="Prevents Falldamage"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- NoFall -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_NoHungerSlowDown" Height="40" ToolTip="Prevents slowing down when having Hunger"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- NoHungerSlowDown -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_NoSwing" Height="40" ToolTip="Allows you to jump in the Air when enabled"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- NoSwing -->
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem>
                        <ScrollViewer  HorizontalAlignment="Stretch" MaxWidth="500">
                            <StackPanel>
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_Instabreak" Height="40" ToolTip="Allows you to boost in the direction you are looking at"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- Instabreak -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_Scaffold" Height="40" ToolTip="Makes you Glide trought the air"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- Scaffold -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_CustomTime" Height="40" ToolTip="Allows you to boost in the direction you are looking at"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <!-- CustomTime -->
                                <Grid Margin="5">
                                    <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                    <Grid Margin="8">
                                        <StackPanel>
                                            <Controls:ModuleButtonToggleControl x:Name="ModuleButton_Fullbright" Height="40" ToolTip="Allows you to boost in the direction you are looking at"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
