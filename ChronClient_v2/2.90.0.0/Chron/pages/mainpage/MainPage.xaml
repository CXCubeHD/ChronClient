                                            <ScrollViewer>
                                                <StackPanel HorizontalAlignment="Stretch" MaxWidth="500">
                                                    <Grid Margin="5">
                                                        <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="3"/>
                                                        <Grid Margin="2,8,2,8">
