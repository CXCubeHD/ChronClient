<Page x:Class="ChronClient.GUI.MainWindow_WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChronClient.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChronClient">

    <Grid>
        <Image Margin="0" Source="/ChronClient;component/ChronClient/res/logo/png/ChronClient_Logo_Gray_BIG.png"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Welcome to the ChronClient" VerticalAlignment="Center" FontFamily="Consolas" FontSize="40" FontWeight="Bold" Foreground="White" Margin="0"/>
        <Button Style="{StaticResource C_Button}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Height="40" Content="Get Started" Margin="0,0,0,40" Click="Button_Click"/>

    </Grid>
</Page>
