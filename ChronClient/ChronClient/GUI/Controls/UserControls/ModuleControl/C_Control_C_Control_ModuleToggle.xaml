<UserControl x:Class="ChronClient.GUI.UserControls.ModuleControl.C_Control_ModuleToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChronClient.GUI.UserControls.ModuleControl"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="700" Height="80" Width="auto">
    <Grid>
        <Grid Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Toggle_Button" Content="{Binding ModuleName}" Grid.Column="1" Style="{StaticResource C_Button}" Margin="0,8,8,8"/>
            <Border Grid.ColumnSpan="2" BorderBrush="#FF3C3C3C" BorderThickness="3" CornerRadius="20"/>
            <Grid Margin="20,5,10,5">
                <TextBlock x:Name="ModuleName_TextBlock" TextWrapping="Wrap" Text="DefaultModuleName" VerticalAlignment="Center" Foreground="White" Margin="0" FontSize="22" FontFamily="Consolas" FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
